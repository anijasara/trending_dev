<p>
  <%= form_tag trending_devs_search_languages_path do %>
    <div>
      Language : <%= text_field_tag :language %>
    </div>
    <div>
      Frequency : <%= text_field_tag :frequency %>
    </div>
    <div class="actions">
      <%= submit_tag "Submit", :name => nil %>
    </div>
  <% end %>
</p>

<h1>TrendingDevs!!</h1>

<%@trending_devs.each do |proj| %>
  <div>Author : <%= proj["author"]%></div>
  <div>Name : <%= proj["name"]%></div>
  <div>Avatar : <%= proj["avatar"]%></div>
  <div>Language : <%= proj["language"]%></div>
  <div>Url : <%= proj["url"]%></div>
  <div>Stars : <%= proj["stars"]%>
  <div>Description : <%= proj["description"]%></div>
  <div>Built by:
    <%proj["builtBy"].each do |author|%>
      <%= author["username"]%>
    <%end%>
  </div>
  <br><br>
<%end%>
